/*******************************************************************************
 * Type Defs
 ******************************************************************************/

typedef enum
{
	WiFi = 0,
	LTE,
	MAX_NUM_COMMS_METHODS
} eCommsMethod;


typedef enum
{
  GPIO_PIN_RESET = 0,
  GPIO_PIN_SET
}GPIO_PinState;


typedef enum
{
	WF200_INIT_TASK = 0,
	WF200_COMMS_TASK,
	WF200_EVENT_TASK,
	WF200_STA_MODE_TASK,
	WF200_AP_MODE_TASK,
	WF200_TEST_MODE_TASK,
	WF200_NUM_TASKS
} WF200_TaskIds;


typedef struct
{
	bool TaskCreated;
	bool TaskRunning;
	TaskHandle_t TaskHandle;
	QueueHandle_t QueueHandle;
} WF200_TaskInfo_t;


typedef struct
{
	bool Awake;
	bool AP_ModeRequired;
	bool TestingModeRequired;
	bool STA_ModeRequired;
	bool STA_CommandedDisconnect;
	bool STA_ModeNetworkConnected;
	SemaphoreHandle_t ReceiveFrameSemaphoreHandle;
	WF200_TaskInfo_t WF200_TaskInfo[WF200_NUM_TASKS];
} WF200_ControlInfo_t;



